<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <meta charset="utf-8">
    <title>Companion Connector</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="/js/controllers/main.js" charset="utf-8"></script>
    <script src="/js/app.js"></script>
    <script src="/bower_components/angularUtils-pagination/dirPagination.js" charset="utf-8"></script>
  </head>
  <body ng-controller="MainController">

    <div>
      Zip or City, State: <input type="text" ng-model="location">
      <button type="button" ng-click="getData()">Search</button>
    </div>
    
    <div>
      <h3>Fliter:</h3>
      Gender: <select name="option" ng-model="option">
        <option ng-repeat="option in options" value="{{option}}">{{option}}</option>
      </select>
    </div>

    <div>
      <h5 dir-paginate="animal in animals | itemsPerPage: pageSize" current-page="currentPage">Name: {{animal.name.$t}} Gender: {{animal.sex.$t}}
        <p>{{animal.animal.$t}}</p>
        <p>About {{animal.name.$t}}: {{animal.description.$t}}</p>
        <img ng-src="{{animal.media.photos.photo[1].$t}}">
        <img ng-hide="true" ng-src="{{animal.media.photos.photo[6].$t}}">
        <br>
        <!-- <button type="button">More Info</button> -->
      </h5>
      <dir-pagination-controls boundary-links="true" on-page-change="pageChangeHandler(newPageNumber)" template-url="dirPagination.tpl.html"></dir-pagination-controls>
    </div>



  </body>
</html>
